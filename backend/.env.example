# Environment Variables Template for Production Deployment
# Copy this file to .env and fill in the actual values
# NEVER commit the .env file to version control

# ====================
# DATABASE CONFIGURATION
# ====================
# User Service Database
DB_URL_USER=jdbc:mysql://your-db-host:3306/user_service_db?useSSL=true&requireSSL=true&serverTimezone=UTC
DB_USERNAME_USER=your_db_username
DB_PASSWORD_USER=your_secure_database_password

# Submission Service Database
DB_URL_SUBMISSION=jdbc:mysql://your-db-host:3306/submission_service_db?useSSL=true&requireSSL=true&serverTimezone=UTC
DB_USERNAME_SUBMISSION=your_db_username
DB_PASSWORD_SUBMISSION=your_secure_database_password

# ====================
# JWT CONFIGURATION
# ====================
# CRITICAL: Generate a strong, unique secret key for production
# Use a minimum of 256-bit (32 characters) random string
# Example generation: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_RANDOM_SECRET_KEY_AT_LEAST_256_BITS
JWT_EXPIRATION=3600000

# ====================
# CORS CONFIGURATION
# ====================
# Comma-separated list of allowed origins (your frontend URLs)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ====================
# FILE UPLOAD CONFIGURATION
# ====================
FILE_UPLOAD_DIR=/var/app/uploads

# ====================
# SSL/TLS CONFIGURATION (Optional)
# ====================
# SSL_KEYSTORE_PATH=/path/to/keystore.p12
# SSL_KEYSTORE_PASSWORD=your_keystore_password

# ====================
# SERVICE URLS
# ====================
USER_SERVICE_URL=http://localhost:8081
SUBMISSION_SERVICE_URL=http://localhost:8082

# ====================
# SERVER PORTS
# ====================
PORT_USER_SERVICE=8081
PORT_SUBMISSION_SERVICE=8082

# ====================
# MONITORING & ACTUATOR
# ====================
ACTUATOR_PORT_USER=9091
ACTUATOR_PORT_SUBMISSION=9092

# ====================
# LOGGING
# ====================
LOG_LEVEL=INFO
LOG_PATH=/var/log/assignment-app
